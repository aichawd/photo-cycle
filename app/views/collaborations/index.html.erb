<div class="container">
  <h1>Collaborations</h1>
  
  <div class="row">
    <div class="col-6">
      <h2>Galleries</h2>
      <% @validated_collabs.each do |collab| %>
        <%= collab.name %>
      <% end %>
    </div>

    <div class="col-6">
      <h2>Collab' requests</h2>

        <h3>Received</h3>
          <h4>Pending</h4>
            <% @received_pending.each do |collab| %>
              <p><%= collab.artist1.username %> is suggesting a collab</p>
              <%= collab.name %>
            <% end %>
          <h4>Refused</h4>
            <% @received_refused.each do |collab| %>
              <%= collab.name %>
            <% end %>
      <br>

      <h3>Sent</h3>
        <h4>Pending</h4>
          <% @sent_pending.each do |collab| %>
              <p>Collab request sent to <%= collab.artist2.username %></p>
              <%= collab.name %>
            <% end %>
          <h4>Refused</h4>
            <% @sent_refused.each do |collab| %>
              <%= collab.name %>
            <% end %>
    </div>
  </div>
</div>
