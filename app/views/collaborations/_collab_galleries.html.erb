<% @validated_collabs.reverse.each do |collab| %>
        <div class="card-collab">
          <div class="av1">
            <% if collab.artist1.photo.attached? %>
              <%= cl_image_tag collab.artist1.photo.key, class: "avatar"%>
            <% end %>
            <div class="av2">
              <% if collab.artist2.photo.attached? %>
                <%= cl_image_tag collab.artist2.photo.key, class: "avatar"%>
              <% end %>
            </div>
            <%= link_to collab.name, collaboration_path(collab), class: "collab-name h5 mx-2 my-1"%>
            <div class="collab_pic_count">
              <%= collab.pictures.count %> photos
            </div>
          </div>
          <br>

          <% if collab.pictures.count == 0 %>
            <div class="text-center">No pictures yet</div>
            <div class="text-center"><%= link_to "Start adding photos", new_picture_path, class: "btn btn-add" %></div>
          <% end %>

          <div class="collab-pictures d-flex">
            <% lastpics = collab.pictures.last(3) %>

            <% if lastpics.count == 1 %>
              <%= cl_image_tag collab.pictures[0].photo.key, height: "300", width:"100%" %>
            <% end %>

            <% if lastpics.count == 2 %>
              <%= cl_image_tag collab.pictures[0].photo.key, height: "300", width:"340" %>
              <%= cl_image_tag collab.pictures[1].photo.key, height: "300", width:"340" %>
            <% end %>

            <% if lastpics.count == 3 %>
              <%= cl_image_tag collab.pictures[0].photo.key, height: "300", width:"340" %>
                <div class="d-flex flex-column">
                  <%= cl_image_tag collab.pictures[1].photo.key, height: "150", width:"340", class: "pb-1" %>
                  <%= cl_image_tag collab.pictures[2].photo.key, height: "150", width:"340" %>
                </div>
            <% end %>

          </div>

        </div>
      <% end %>
    </div>
