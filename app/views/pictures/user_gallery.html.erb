<div data-controller="user-search">
  <div class='user-banner mb-2' style="background-image: linear-gradient(rgba(0,0,0,0.0), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1550895030-823330fc2551?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80)">
    <div class="banner-container">
      <h1 style="margin-bottom: 0px;">
        <% if @user.photo.attached? %>
          <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
        <% end %>
        <%= @user.first_name %> <%= @user.last_name %>
        <button type="button" class="collab-btn" data-bs-toggle="modal" data-bs-target="#collabModal">
          Collaborate →
        </button>
      </h1>

      <h3>Bio: artichette, tichette de 2, tichette de 3, tichette de 21, michette, <br> tchiledeque, mique,sganabadarlane, résiné et raitournelle..</h3>
      <p>
        <%= @user_pictures.count %> photos
      </p>
      <p class="tags">
        <span class="badge rounded-pill bg-light text-dark mx-1"
              data-user-search-target="tag"
              data-action="click->user-search#all">
          All
        </span>

        <% @user_categories.each do |cat_name| %>
          <span class="badge rounded-pill bg-light text-dark mx-1"
                data-user-search-target="tag"
                data-tag-name="<%= cat_name %>"
                data-action="click->user-search#filter">
            <%= cat_name %>
          </span>
        <% end %>
      </p>

      <% if @user == current_user %>
        <button type="button" class="contact-btn" data-bs-toggle="modal" data-bs-target="#newPhotoModal">
          Add photo
        </button>
      <% else %>
        <%= link_to 'Contact', chatroom_path(@single_chatroom), class: "contact-btn" %>
      <% end %>
    </div>
  </div>

  <%= render 'modals' %>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <button class="nav-link active" id="nav-main-tab" data-bs-toggle="tab" data-bs-target="#nav-main" type="button" role="tab" aria-controls="nav-main" aria-selected="true">Personal gallery</button>
      <button class="nav-link" id="nav-collabs-tab" data-bs-toggle="tab" data-bs-target="#nav-collabs" type="button" role="tab" aria-controls="nav-collabs" aria-selected="false">Collabs</button>
    </div>
  </nav>

  <!-- PERSONAL PHOTOS -->
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-main" role="tabpanel" aria-labelledby="nav-main-tab">
      <div class="photo-behavior" data-controller="view-photo">
        <ul>
          <% @user_pictures.each do |pic| %>
            <li data-user-search-target="image"
                data-categories="<%= pic.categories.map(&:name).join(' ') %>">
              <a data-action="click->view-photo#view">
                <%= cl_image_tag pic.photo.key %>
              </a>
              <% if @user == current_user %>
                <div class="dropdown">
                  <a  type="button" class="dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i id="edit_pencil" class="fas fa-edit"></i>
                  </a>
                  <div class="dropdown-menu">
                    <%= link_to "Edit", "#", class: "dropdown-item" %>
                    <%= link_to "Delete",
                          picture_path(pic),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this picture? This action is irreversible." },
                          class: "dropdown-item" %>
                  </div>
                </div>
              <% end %>
              <div id="gallery_modal" class="modal" data-controller="modal" data-view-photo-target="modal">
                <div class="modal-dialog">
                    <div id="gallery_modal_content" class="modal-content">
                      <a class="link-secondary" data-action="click->modal#close">Close</a>
                      <div data-modal-target="photo">
                      </div>
                      <p class="mx-3"><%= pic.boitier %> <%= pic.objectif %></p>
                      <p class="mx-3"><%= pic.ouverture %> <%= pic.temps_pose %> ISO<%= pic.sensibilite %></p>
                    </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <!-- COLLABORATION PHOTOS -->
    <div class="tab-pane fade" id="nav-collabs" role="tabpanel" aria-labelledby="nav-collabs-tab">
      <div class="photo-behavior" data-controller="view-photo">
        <ul>
          <% @user_collab_pictures.each do |pic| %>
            <li class="collab-pic">
              <a data-action="click->view-photo#view">
                <%= cl_image_tag pic.photo.key %>
              </a>
              <% if @user == current_user %>
                <div class="dropdown">
                  <a  type="button" class="dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i id="edit_pencil" class="fas fa-edit"></i>
                  </a>
                  <div class="dropdown-menu">
                    <%= link_to "Edit", "#", class: "dropdown-item" %>
                    <%= link_to "Delete",
                          picture_path(pic),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this picture? This action is irreversible." },
                          class: "dropdown-item" %>
                  </div>
                </div>
              <% end %>
              <% collab = Collaboration.find(pic.collaboration_id) %>
              <%= link_to collab.name, collaboration_path(collab), class:"collab-name"%>
              <div id="gallery_modal" class="modal" data-controller="modal" data-view-photo-target="modal">
                <div class="modal-dialog">
                    <div id="gallery_modal_content" class="modal-content">
                      <a class="link-secondary" data-action="click->modal#close">Close</a>
                      <div data-modal-target="photo">
                      </div>
                    </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
