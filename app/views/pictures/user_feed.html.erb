<div data-controller="search">
  <div class="feeds-banner">
    <h1>Discover something new</h1>
    <%= simple_form_for :search,
                        url: root_path,
                        method: :get,
                        html: {
                          data: {
                            search_target: 'form',
                            action: 'submit->search#search'
                          }
                        } do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="query" id="search_query"
              data-search-target="input" data-action="input->search#search"/>
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i>
        </button>
      </div>
    <% end %>
  </div>

  <div class="photo-feed-behavior">
    <ul data-search-target="picturesContainer" data-controller="grid">
      <%= render 'pictures/user_feed_photos', pictures: @pictures %>
    </ul>
  </div>
</div>
